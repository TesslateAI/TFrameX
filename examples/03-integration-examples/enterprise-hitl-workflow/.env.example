# Enterprise HITL Workflow System Configuration Template
# Copy this file to .env and fill in your actual values

# Llama API Configuration
# Get your API key from https://api.llama.com/
LLAMA_API_KEY=your_llama_api_key_here
LLAMA_BASE_URL=https://api.llama.com/compat/v1/
LLAMA_MODEL=Llama-4-Maverick-17B-128E-Instruct-FP8

# Enterprise Configuration
COMPANY_NAME="Your Company Name"
ENVIRONMENT=development

# Database Configuration
DATABASE_PATH=enterprise_workflows.db

# Notification Settings (for future integration)
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
NOTIFICATION_FROM=noreply@company.com

# Security Settings
SESSION_TIMEOUT=3600
AUDIT_RETENTION_DAYS=2555  # 7 years for compliance

# Risk Assessment Thresholds
LOW_RISK_EXPENSE_THRESHOLD=1000
MEDIUM_RISK_EXPENSE_THRESHOLD=10000
HIGH_RISK_EXPENSE_THRESHOLD=50000

LOW_RISK_CONTRACT_THRESHOLD=50000
MEDIUM_RISK_CONTRACT_THRESHOLD=500000
HIGH_RISK_CONTRACT_THRESHOLD=2000000