# TFrameX Content Creation Pipeline - Environment Configuration

# ===== LLM Configuration =====
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4

# For local Ollama:
# OPENAI_API_BASE=http://localhost:11434/v1
# OPENAI_API_KEY=ollama
# OPENAI_MODEL_NAME=llama3

# ===== Application Settings =====
APP_NAME=Content Creation Pipeline TFrameX
LOG_LEVEL=INFO

# ===== Content Pipeline Settings =====
DEFAULT_CONTENT_TYPE=auto
ENABLE_SEO_OPTIMIZATION=true
ENABLE_PARALLEL_ANALYSIS=true
MAX_CONTENT_LENGTH=10000

# ===== Content Quality Settings =====
QUALITY_THRESHOLD=0.8
ENABLE_FACT_CHECKING=true
ENABLE_PLAGIARISM_CHECK=false

# ===== Optional: External Services =====
# CONTENT_API_KEY=your_content_api_key
# SEO_TOOL_API_KEY=your_seo_tool_key
# GRAMMAR_CHECK_API_KEY=your_grammar_api_key