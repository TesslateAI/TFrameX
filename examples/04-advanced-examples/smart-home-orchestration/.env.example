# TFrameX Smart Home Orchestration - Environment Configuration

# ===== LLM Configuration =====
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4

# For local Ollama:
# OPENAI_API_BASE=http://localhost:11434/v1
# OPENAI_API_KEY=ollama
# OPENAI_MODEL_NAME=llama3

# ===== Application Settings =====
APP_NAME=Smart Home Orchestration TFrameX
LOG_LEVEL=INFO

# ===== Smart Home Settings =====
HOME_TIMEZONE=America/New_York
ENERGY_RATE_PEAK=0.25
ENERGY_RATE_OFFPEAK=0.12
SECURITY_MODE=standard
COMFORT_PRIORITY=medium

# ===== Device Integration =====
# MQTT Broker for IoT devices
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=your_mqtt_password

# Smart Home Platforms (optional)
# HOMEASSISTANT_URL=http://homeassistant.local:8123
# HOMEASSISTANT_TOKEN=your_long_lived_access_token
# SMARTTHINGS_API_KEY=your_smartthings_api_key
# PHILIPS_HUE_BRIDGE_IP=192.168.1.100

# ===== Weather Service =====
# WEATHER_API_KEY=your_openweathermap_api_key
# WEATHER_LOCATION=New York,NY,US

# ===== Energy Management =====
ENABLE_ENERGY_OPTIMIZATION=true
PEAK_HOURS_START=16:00
PEAK_HOURS_END=20:00
MAX_HOURLY_ENERGY_COST=5.00

# ===== Security Settings =====
ENABLE_SECURITY_MONITORING=true
MOTION_DETECTION_SENSITIVITY=medium
SECURITY_NOTIFICATION_EMAIL=alerts@yourhome.com
EMERGENCY_CONTACT_PHONE=+1234567890

# ===== Preferences =====
DEFAULT_MORNING_TEMP=71
DEFAULT_EVENING_TEMP=68
DEFAULT_AWAY_TEMP=65
ENABLE_CIRCADIAN_LIGHTING=true
AUTO_LOCK_DELAY_MINUTES=5