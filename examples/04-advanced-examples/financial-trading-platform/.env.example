# TFrameX Financial Trading Platform - Environment Configuration

# ===== LLM Configuration =====
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4

# For local Ollama:
# OPENAI_API_BASE=http://localhost:11434/v1
# OPENAI_API_KEY=ollama
# OPENAI_MODEL_NAME=llama3

# ===== Application Settings =====
APP_NAME=Financial Trading Platform TFrameX
LOG_LEVEL=INFO

# ===== IMPORTANT DISCLAIMER =====
# This is a simulation for educational purposes only
# NOT for real trading - always consult financial professionals
SIMULATION_MODE=true
EDUCATIONAL_DISCLAIMER=true

# ===== Trading Platform Settings =====
BASE_CURRENCY=USD
PORTFOLIO_INITIAL_VALUE=100000.00
RISK_TOLERANCE=medium
MAX_POSITION_SIZE_PERCENT=5.0
MAX_SECTOR_CONCENTRATION_PERCENT=20.0
CASH_RESERVE_PERCENT=10.0

# ===== Risk Management =====
MAX_DAILY_LOSS_PERCENT=2.0
MAX_PORTFOLIO_LEVERAGE=1.0
STOP_LOSS_DEFAULT_PERCENT=5.0
ENABLE_RISK_ALERTS=true

# ===== Market Data Sources (optional) =====
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
# YAHOO_FINANCE_ENABLED=true
# POLYGON_API_KEY=your_polygon_key
# QUANDL_API_KEY=your_quandl_key

# ===== Broker Integration (optional - for real implementations) =====
# BROKER_API_URL=https://api.broker.com
# BROKER_API_KEY=your_broker_api_key
# BROKER_API_SECRET=your_broker_secret
# PAPER_TRADING_MODE=true

# ===== Analysis Settings =====
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_FUNDAMENTAL_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
DEFAULT_ANALYSIS_TIMEFRAME=1D

# ===== Portfolio Settings =====
TARGET_EQUITY_ALLOCATION=65.0
TARGET_BOND_ALLOCATION=25.0
TARGET_ALTERNATIVE_ALLOCATION=10.0
REBALANCE_THRESHOLD_PERCENT=5.0

# ===== Notification Settings =====
ENABLE_EMAIL_ALERTS=false
EMAIL_ALERTS_ADDRESS=trading@yourcompany.com
ENABLE_SMS_ALERTS=false
SMS_ALERTS_PHONE=+1234567890

# ===== Performance Tracking =====
BENCHMARK_SYMBOL=SPY
ENABLE_PERFORMANCE_TRACKING=true
PERFORMANCE_REPORT_FREQUENCY=daily

# ===== Compliance and Regulatory =====
REGULATORY_JURISDICTION=US
ENABLE_COMPLIANCE_MONITORING=true
PATTERN_DAY_TRADER_RULES=true
WASH_SALE_MONITORING=true